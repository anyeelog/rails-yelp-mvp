<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>

<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<p><strong>Reviews</strong></p>

<%= render "reviews/new", restaurant: @restaurant %>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

<%= link_to "Back to all restaurants", restaurants_path %>
<%= link_to "Delete this restaurant", restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure want to delete #{@restaurant.name}?"} %>
